<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juancrud.petagram">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ListaActivity" />
        <activity
            android:name=".activities.FavoritosActivity"
            android:parentActivityName=".activities.ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juancrud.petagram.activities.ListaActivity" />
        </activity>
        <activity
            android:name=".activities.ContactActivity"
            android:parentActivityName=".activities.ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juancrud.petagram.activities.ListaActivity" />
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:parentActivityName=".activities.ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juancrud.petagram.activities.ListaActivity" />
        </activity>
        <activity android:name=".activities.ConfigurarActivity">
            android:parentActivityName=".activities.ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juancrud.petagram.activities.ListaActivity" />
        </activity>
    </application>

</manifest>